{% extends "base.html.twig" %}

{% block head %}
<style>
    #download-url {
        width: 100%;
        height: 50px;
    }
</style>
<script>
    window.addEventListener('load', function (e) {
        document.getElementById('download-url').onclick = function (e) {
            this.select();
        };
    });
</script>
{% endblock %}

{% block body %}
    <h1>File uploaded</h1>
    <p>
        You can use this link:
        <br>
        <textarea id="download-url" readonly="true">{{ url }}</textarea>
    </p>
    <p><a href="{{ app.url_generator.generate('home') }}">Upload new file</a></p>
{% endblock %}
